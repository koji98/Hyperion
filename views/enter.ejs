          <li class="nav-item">
            <a class="nav-link" href="/enter">Sign up/Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- PART ONE -->
  <div class="row" id="one">
    <div class="col-md-6">
      <h1 class="text-center firstOne">Register</h1>
      <!-- Register -->
      <div class="container">
        <form action="/register" method="POST">
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="newUser[email]" class="form-control" placeholder="Email..." required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" name="newUser[password]" class="form-control" placeholder="Password..." required>
          </div>
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="newUser[name]" class="form-control" placeholder="Enter Name" required>
          </div>
          <div class="form-group">
            <label>Location</label>
            <input type="text" name="newUser[location]" class="form-control" placeholder="Location" required>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>

    <div class="col-md-6">
      <h1 class="text-center firstOne">Login</h1>
      <!-- LOGIN -->
      <div class="container">
        <form action="/login" method="POST">
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" placeholder="Email...">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password...">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>

